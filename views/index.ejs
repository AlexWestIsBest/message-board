<%- include('./partials/head.ejs') %>
<body>
    <h1>Message Board</h1>
    <% messages.forEach(m => { %> 
        <fieldset>
            <% if (m.name.length !== 0) { %>
                <legend><%= m.name %></legend>
            <% } %> 
            <% if (m.image.length !== 0) { %>
                <img src="<%= m.image %>" width="100%">
            <% } %>
            <% if (m.text.length !== 0) { %>
                <div><%= m.text %></div>
            <% } %> 

        </fieldset><br><br>
    <% }) %> 
</body>
</html>