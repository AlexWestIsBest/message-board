<%- include(`./partials/head.ejs`) %>
<body>
    <h1>Message Board</h1>
    <fieldset>
        <% if (m.name.length !== 0) { %>
            <legend><%= m.name %></legend>
        <% } %> 
        <% if (m.image.length !== 0) { %>
            <img src="<%= m.image %>" width="100%">
        <% } %>
        <% if (m.text.length !== 0) { %>
            <div><%= m.text %></div>
        <% } %>
    </fieldset>
    <div class="buttonArray">
        <a href="/newsfeed"><img class="icon" src="https://cdn-icons-png.flaticon.com/128/9283/9283237.png" alt="Back"></a>
        <a href="/newsfeed/<%= m._id %>/edit"><img class="icon" src="https://cdn-icons-png.flaticon.com/128/9283/9283137.png" alt="Edit"></a>
        <form action="/newsfeed/<%= m._id %>?_method=DELETE" method="POST">
            <input type="image" class="icon" src="https://cdn-icons-png.flaticon.com/128/9283/9283081.png" alt="Delete">
        </form>
    </div>
</body>
</html>